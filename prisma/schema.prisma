generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id String @id @default(uuid())

  address String @unique
  apiKey  String @unique @default(uuid())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Intent {
  id        String   @id @default(uuid())
  socket    String
  solver    String
  actions   String[]
  signer    String
  signature String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
